      {
        "type": "date",
        "vermutet": true,
        "name": "Geburtsdatum",
        "wide_range": true
      },
      {
        "type": "text",
        "vermutet": true,
        "name": "Geburtsland",
        "parsley_validator": "data-parsley-capslock"
      },
      {
        "type": "text",
        "vermutet": true,
        "name": "Geburtsort",
        "tooltip": {
          "text": "Stadt oder Ort der Geburt. Keine Straße etc.",
          "icon": "help"
        },
        "parsley_validator": "data-parsley-capslock"
